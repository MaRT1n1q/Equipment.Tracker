{
  "name": "equipment-tracker",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Equipment Tracker",
    "email": "support@equipment-tracker.app"
  },
  "description": "Desktop application for tracking equipment requests",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:bundle && electron-builder --win --mac --linux",
    "build:bundle": "tsc && vite build",
    "build:win": "npm run build:bundle && electron-builder --win",
    "build:linux": "npm run build:bundle && electron-builder --linux",
    "build:mac": "npm run build:bundle && electron-builder --mac",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "build:ci": "tsc --noEmit && vite build",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "knex": "^3.1.0",
    "lucide-react": "^0.548.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.equipment.tracker",
    "productName": "Equipment Tracker",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "maintainer": "Equipment Tracker <support@equipment-tracker.app>"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --cache --fix",
      "prettier --check"
    ],
    "**/*.{json,css,html,md}": [
      "prettier --check"
    ]
  }
}
